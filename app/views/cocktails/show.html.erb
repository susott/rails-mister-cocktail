<h1><%= @cocktail.name%></h1>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %><br>

<ul>
  <% @cocktail.doses.each do |i| %>
    <li>
      <%= i.description %>
      <%= i.ingredient.name %>
      <%= link_to "Delete dose", dose_path(i), method: :delete, class: "btn btn-warning" %><br>
    </li>
  <% end %>
</ul>

<%= link_to "Back to main page", cocktails_path, class: "btn btn-primary" %>
