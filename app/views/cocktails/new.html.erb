<h1>New Cocktail</h1>
<div class="container">
  <div class="cocktail-card">
    <%= simple_form_for [@cocktail] do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "add this cocktail", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
