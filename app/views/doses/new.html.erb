<h1>Add a Dose</h1>

<%= simple_form_for [@cocktail, @dose], url: cocktail_doses_path, method: :post do |f| %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.input :description, :label => "How much of it?" %>
  <%= f.submit "add description", class: "btn btn-primary" %>
<% end %>
